{
  // ========================================
  // Workbench Appearance
  // ========================================
  "workbench.colorCustomizations": {
    "window.activeBorder": "#b1f010A0",
    "window.inactiveBorder": "#5c5cff",
    "activityBar.border": "#b1f010A0",
    "editorGroupHeader.tabsBorder": "#b1f010A0",
    "titleBar.border": "#b1f010A0"
  },
  "workbench.editorLargeFileConfirmation": 256,

  // ========================================
  // Update Settings
  // ========================================
  "update.mode": "none",
  "extensions.autoCheckUpdates": false,

  // ========================================
  // Remote Development Settings
  // ========================================
  "dev.containers.executeInWSL": true,
  "remote.SSH.remotePlatform": {},

  // ========================================
  // Terminal Settings
  // ========================================
  "terminal.integrated.scrollback": 1000000,
  "terminal.integrated.persistentSessionScrollback": 1000000,

  // ========================================
  // GitHub Copilot Settings
  // ========================================
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.completionContext.typescript.mode": "sidecar",
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.advanced": {},

  // ========================================
  // Chat Tools Terminal Auto-Approve
  // ========================================
  "chat.tools.terminal.autoApprove": {
    "git config": true,
    "git merge-base": true,
    "git rev-parse": true,
    "git rev-list": true,
    "git remote get-url": true,
    "New-Item": true,
    "Out-Null": true,
    "Out-File": true,
    "Get-Item": true,
    "Test-Path": true,
    "Group-Object": true,
    "ConvertTo-Json": true,
    "whoami": true,
    "cloc": true,
    "chcp": true
  },

  // ========================================
  // Chat Tools Server Sampling Settings
  // ========================================
  "chat.mcp.serverSampling": {
    "GitKraken (bundled with GitLens): GitKraken": {
      "enabled": false,
      "allowedModels": []
    }
  },

  // ========================================
  // SonarLint Settings
  // ========================================
  "sonarlint.disableTelemetry": true,
  "sonarlint.trace.server": "off",
  "sonarlint.testFilePattern": "**/*.spec.*",

  // ========================================
  // Security Settings
  // ========================================
  "security.workspace.trust.untrustedFiles": "open",

  // ========================================
  // GitLens AI Settings
  // ========================================
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",

  // ========================================
  // Editor Settings
  // ========================================
  "editor.defaultFormatter": "ms-dotnettools.csharp",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.trimAutoWhitespace": true,
  "editor.renderWhitespace": "selection",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.pylance": "explicit"
  },
  "editor.rulers": [100, 120],
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,

  // ========================================
  // C# and .NET Settings
  // ========================================
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // === OmniSharp Configuration ===
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableReferenceCodeLens": true,
  "omnisharp.enableAsyncCompletion": true,
  "omnisharp.maxProjectFileCountForDiagnosticAnalysis": 10,

  // === C# Dev Kit Configuration ===
  "dotnetAcquisitionExtension.enableTelemetry": false,

  // ========================================
  // File Handling
  // ========================================
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.swp": true,
    "**/*.swo": true,
    "**/Thumbs.db": true,
    "**/bin": true,
    "**/obj": true,
    "**/.vscode": false,
    "**/.vs": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/bin/**": true,
    "**/obj/**": true,
    "**/.vs/**": true
  },

  // ========================================
  // Git Integration
  // ========================================
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
  "gitlens.defaultDateShortFormat": "MM/DD",

  // ========================================
  // Search Settings
  // ========================================
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/bin": true,
    "**/obj": true,
    "**/.vs": true
  },

  // ========================================
  // Terminal Settings
  // ========================================
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",

  // ========================================
  // Debug Configuration
  // ========================================
  "debug.openExplorerOnEnd": false,
  "debug.inlineValues": "auto",
  "debug.internalConsoleOptions": "openOnSessionStart",

  // ========================================
  // Extension Settings
  // ========================================

  // === SonarLint ===
  "sonarlint.ls.javaHome": "",
  "sonarlint.showAnalyzerLogs": false,
  "sonarlint.connectedMode.connections.sonarcloud": [],

  // === EditorConfig ===
  "editorconfig.enable": true,

  // === Gitmoji ===
  "gitmoji.showBuildMetadata": false,
  "gitmoji.language": "ja",

  // === GitHub Copilot ===
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false
  },

  // ========================================
  // Code Lens Settings
  // ========================================
  "codeLens.enabled": true,

  // ========================================
  // Language Associations
  // ========================================
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[xml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // ========================================
  // Performance Settings
  // ========================================
  "files.maxMemoryForLargeFilesMB": 4096,
  "window.restoreWindows": "all",
  "dotnet.formatting.organizeImportsOnFormat": true
}
